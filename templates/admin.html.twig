{% set classBody = "AdminPages" %}
{% extends 'base.html.twig' %}

{% block content_title %}{{ title }}{% endblock %}
{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="{{ path('admin_dashboard') }}">Company name</a>
        <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
                <a class="nav-link" href="{{ path('app_logout') }}">Sign out</a>
            </li>
        </ul>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        {% for link in menuadmin %}
                            <li class="nav-item">
                                <a class="nav-link{% if link['current'] is defined %} active{% endif %}" href="{{ path(link['url']) }}">
                                {{ link['title'] }}{% if link['current'] is defined %} <span class="sr-only">(current)</span>{% endif %}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </nav>
            <main role="main" class="col-md-10">
                <div class="row">
                    <div class="col">
                        <h1>{{ title }}</h1>
                    </div>
                    <div class="col text-right">
                        {% if url_list is defined or url_new is defined or url_delete is defined or btnSave is defined %}
                            <div class="btn-group BtnActions" role="group" aria-label="Basic example">
                                {% if url_list is defined %}
                                    <a class="btn btn-secondary BtnActionList" href="{{ path(url_list) }}">
                                        <i class="fas fa-list"></i>
                                        <span>Liste</span>
                                    </a>
                                {% endif %}
                                {% if btnSave is defined %}
                                    <a class="btn btn-secondary BtnActionSave" href="#">
                                        <i class="fas fa-save"></i>
                                        <span>Sauvegarder</span>
                                    </a>
                                {% endif %}
                                {% if url_new is defined %}
                                    <a class="btn btn-secondary BtnActionAdd" href="{{ path(url_new) }}">
                                        <i class="fas fa-plus"></i>
                                        <span>Ajouter</span>
                                    </a>
                                {% endif %}
                                {% if url_delete is defined %}
                                    <a class="btn btn-secondary BtnActionDelete" href="{{ path(url_delete) }}">
                                        <i class="fas fa-trash-alt"></i>
                                        <span>Supprimer</span>
                                    </a>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                </div>
    {% block bodyAdmin %}

    {% endblock %}
            </main>
        </div>
    </div>
{% endblock %}
