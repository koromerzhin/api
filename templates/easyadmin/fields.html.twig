{%- block vich_image_widget -%}
    <div class="vich-image">
        {{- form_widget(form.file) -}}
        {%- if form.delete is defined -%}
            {{- form_row(form.delete) -}}
        {%- endif -%}

        {%- if image_uri -%}
            {% set random = random() %}
            <a href="#" class="easyadmin-thumbnail" data-featherlight="#easyadmin-lightbox-{{ random }}" data-featherlight-close-on-click="anywhere">
                {# the second parameter is the name of the property with the UploadableField annotation #}
                <img src="{{ asset(image_uri[1:]) }}">
            </a>
            <div id="easyadmin-lightbox-{{ random }}" class="easyadmin-lightbox">
                {# the second parameter is the name of the property with the UploadableField annotation #}
                <img src="{{ asset(image_uri[1:]) }}">
            </div>
        {%- endif -%}
        {%- if download_uri -%}
            <a href="{{ asset(image_uri[1:]) }}">{{ translation_domain is same as(false) ? download_label : download_label|trans({}, translation_domain) }}</a>
        {%- endif -%}
    </div>
{%- endblock -%}
