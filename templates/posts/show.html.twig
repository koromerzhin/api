{% extends 'base.html.twig' %}

{% block page_title %}{{ post.name }}{% endblock %}

{% block body %}
    <h2>{{ post.name }}</h2>
    {% if post.file %}
        {% set image = post_uri_path ~ post.file %}
        <img src="{{ asset(image[1:]) }}" title="{{ post.name|e }}" />
    {% endif %}
    <div><a href="{{ path('posts_user',{'user': post.refuser.id}) }}">{{ post.refuser }}</a></div>
    <div>cr√©er le {{ post.createdAt|date }} et modifier le {{ post.updatedAt|date }}</div>
    <div>TAGS : {% for tag in post.tags %}
        <a href="{{ path('posts_tag',{'slug': tag.slug}) }}">{{ tag.name }}</a>
    {% endfor %}</div>
    <div>categorie : <a href="{{ path('posts_category',{'slug': post.refcategory.slug}) }}">{{ post.refcategory.name }}</a></div>
    <div>
        {{ post.content|raw }}
    </div>
{% endblock %}
