{% extends 'base.html.twig' %}

{% block content_title %}Tags{% endblock %}

{% block body %}
    <h1>Tags</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ tag.slug }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ tag.deletedAt ? tag.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ tag.createdAt ? tag.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ tag.updatedAt ? tag.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admintags_index') }}">back to list</a>

    <a href="{{ path('admintags_edit', {'id': tag.id}) }}">edit</a>

    {{ include('admin/admin/tags/_delete_form.html.twig') }}
{% endblock %}
