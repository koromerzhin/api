{% extends 'base.html.twig' %}

{% block content_title %}Configuration index{% endblock %}

{% block body %}
    <h1>Configuration index</h1>

    <table class="table table-striped table-bordered dataTable">
        <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for configuration in pagination %}
            <tr>
                <td></td>
                <td>{{ configuration.id }}</td>
                <td>{{ configuration.name }}</td>
                <td>{{ configuration.value }}</td>
                <td>{{ configuration.createdAt ? configuration.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ configuration.updatedAt ? configuration.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('adminconfiguration_edit', {'id': configuration.id}) }}">
                        <i class="fas fa-edit"></i>
                        edit
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('adminconfiguration_new') }}">Create new</a>
{% endblock %}
