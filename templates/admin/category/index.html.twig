{% extends 'base.html.twig' %}

{% block content_title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table table-striped table-bordered dataTable">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in pagination %}
            <tr>
                <td></td>
                <td>{{ category.name }}</td>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admincategory_edit', {'id': category.id}) }}">
                        <i class="fas fa-edit"></i>
                        edit
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admincategory_new') }}">Create new</a>
{% endblock %}
