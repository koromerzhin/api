{
    "phpfmt.indent_with_space": 4,
    "phpfmt.psr2": true,
    "phpfmt.psr1": true,
    "phpfmt.passes": [
        "AlignDoubleArrow"
    ],
    "phpcs.standard": "${workspaceRoot}/phpcs.xml.dist",
    "phpcbf.standard": "${workspaceRoot}/phpcs.xml.dist",
    "phpmd.rules": "${workspaceRoot}/phpmd.xml",
    "php-cs-fixer.config": "${workspaceRoot}/.php_cs.dist",
    "workbench.colorCustomizations": {
        "activityBar.background": "#9f4470",
        "titleBar.activeBackground": "#7b3557",
        "titleBar.inactiveBackground": "#7b355799",
        "statusBar.background": "#7b3557",
        "statusBarItem.hoverBackground": "#9f4470"
    },
}
